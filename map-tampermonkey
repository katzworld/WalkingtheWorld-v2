let how_many = 0 //ALL OF THEM !!
let liferLocal = localStorage.getItem('lifetime_plot'); // hold a special place on your computer
//let liferLocal = 0 <--- if problems remove // add them to above line to reset <ASK KAT?>
let lifer = parseInt(liferLocal, 10)

//let liferLocal = 0
var intv = setInterval(function() {
    var plot = document.getElementById('plot_id').lastChild.textContent.slice(-4).replace('#','').replace(' ', '');
    var image = document.getElementById('plot_id');
    var img = document.createElement("img");
    img.src = `https://meta.tmwstw.io/preview_plots_${plot}.jpg`;
    img.height = 200;
    img.width = 200;
    if(plot.length < 1){
        return false;
    }
    //clearInterval(intv); //loop it ... loooooop it real good
        var visit_this_session = `PlatOmeter = ${how_many} LT- ${lifer} `;
        image.textContent = visit_this_session;
        image.appendChild(img);
    how_many +=1;
    lifer +=1;
    localStorage.setItem('lifetime_plot', lifer);
}, 5000)();